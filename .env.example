# Pinata Configuration (Required for IPFS uploads)
# Get your JWT from: https://app.pinata.cloud/developers/api-keys
VITE_PINATA_JWT=your_pinata_jwt_here

# WalletConnect Project ID (Required for wallet connections)
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Contract Addresses (Will be set after deployment)
VITE_FIRE_DOMAIN_REGISTRY_ADDRESS=contract_address_after_deployment
VITE_CHAT_REGISTRY_ADDRESS=contract_address_after_deployment

# Network Configuration
VITE_CHAIN_ID=11155111
VITE_NETWORK_NAME=sepolia

# XMTP Configuration (Optional - for messaging features)
VITE_XMTP_ENV=dev

# App Configuration
VITE_APP_NAME=Fire Chat DApp
VITE_APP_DESCRIPTION=Decentralized chat with custom .fire domains

# Development Configuration
NODE_ENV=development